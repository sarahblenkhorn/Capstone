@page "/"
@page "/login"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<style>
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: #fff;
    }

    .login-box {
        padding: 2rem;
        width: 100%;
        max-width: 420px;
        border: 1px solid #e5e5e5;
        border-radius: 10px;
        box-shadow: 0 6px 16px rgba(0,0,0,.08);
        background: #fff;
    }

    .login-title {
        margin: 0 0 1rem 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .login-input {
        width: 100%;
        padding: .65rem .9rem;
        margin: .5rem 0;
        font-size: 1rem;
        text-align: center; 
        border: 1px solid #9a9a9a;
        border-radius: 6px;
        outline: none;
    }

        .login-input:focus {
            border-color: #333;
            box-shadow: 0 0 0 2px rgba(0,0,0,.08);
        }

    .login-btn {
        display: block;
        width: 180px;
        margin: 1rem auto 0;
        padding: .6rem 1rem;
        border: none;
        border-radius: 8px;
        background: #222;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
    }

        .login-btn:active {
            transform: translateY(1px);
        }

    .err {
        margin-top: .75rem;
        color: #c62828;
        text-align: center;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <h3 class="login-title">Login</h3>

        <input class="login-input" @bind="username" placeholder="Username" />
        <input class="login-input" type="password" @bind="password" placeholder="Password" />

        <button type="button" class="login-btn" @onclick="HandleLogin">Login</button>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="err">@errorMessage</div>
        }
    </div>
</div>

@code {
    private string username = "";
    private string password = "";
    private string? errorMessage;

    private void HandleLogin()
    {
        errorMessage = null;

        if (username == "user" && password == "userpassword")
            NavigationManager.NavigateTo("/user");
        else if (username == "admin" && password == "adminpassword")
            NavigationManager.NavigateTo("/AdminPage");
        else if (username == "manager" && password == "managerpassword")
            NavigationManager.NavigateTo("/ManagerPage");
        else
            errorMessage = "Invalid username or password.";
    }
}
